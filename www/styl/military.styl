&.military
  float left
  margin-left 250px
  margin-bottom 40px
  h3
    margin-bottom 25px
  .barchart
    width 540px
    left -20px
    position relative
    height 300px
    border-bottom 1px solid #a
    .country
      width (100% / 6)
      height 100%
      float left
      position relative
      .bar
        position absolute
        bottom 0px
        left 0px
        width 50%
        margin-left 25%
        background #b
        .value
          position absolute
          top -25px
          left 50%
          transform translate(-50%, 0)
          white-space nowrap
      &:last-child .bar
        background ColorRed
      &:nth-child(5) .bar
        background #8
      .name
        position absolute
        bottom -25px
        left 50%
        transform translate(-50%, 0)
        display block
        text-align center

