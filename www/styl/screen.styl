@import colors
@import prefixes
@import 'components/triangle'
@import fitter

@keyframes narrowIn
  from
    top 0px
    height 20px
  to
    top 5px
    height 10px


#article .ig
  @import basics
  @import migrants
  @import population
  @import military
#article p.pre-population
  position relative
  z-index 2

#article .ig
  h3
    font-size 16px
    margin 10px 0px
  h4
    font-size 14px
    font-weight 500
    color #4
    margin 6px 0px
#article
  h2#Gambie
    position relative
    a.offlink
      position absolute
      float left
      font-size 16px
      left 100%
      bottom 115px
      margin-left 40px
      width 150px
      font-weight normal
      line-height 18px
      border 1px solid darken(ColorBlue, 50%)
      transition background 0.2s
      background ColorBlue
      color white
      padding 12px 18px
      border-radius 4px
      ul
        list-style-type square
        margin-left 0px
        font-size 14px
        margin-top 14px
        margin-bottom 4px
        li
          margin-left 20px
          padding-left 0px
          margin-bottom 8px
          &:last-child
            margin-bottom 0px
            text-decoration underline
      &:hover
        text-decoration none
        background lighten(ColorBlue, 10%)
        li:last-child
          text-decoration none
